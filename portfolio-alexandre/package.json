{
  "name": "portfolio-alexandre",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "postbuild": "powershell -Command \"Copy-Item -Path index.html -Destination dist/\"",
    "vercel-build": "tsc -b && vite build && cp index.html dist/",
    "lint": "eslint .",
    "preview": "vite preview",
    "docker:build": "docker build -t portfolio-alexandre .",
    "docker:run": "docker run -p 8080:80 portfolio-alexandre",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-icons": "^11.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "@eslint/js": "^9.31.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^13.24.0",
    "postcss": "^8.4.38",
    "sass": "^1.77.6",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.3.3",
    "typescript-eslint": "^7.1.0",
    "vite": "^5.1.4"
  }
}
